@page "/"

<SfSlider Value="40" Width="600px" Step="10" Min="0" Max="200">
    <SliderTooltip IsVisible="true"
                       ShowOn="TooltipShowOn.Always"
                       Placement="TooltipPlacement.After"
                       Format="C2">
    </SliderTooltip>
    <SliderTicks Placement="Placement.After"
                     LargeStep="20"
                     SmallStep="10"
                     ShowSmallTicks="true"
                     Format="C2">
    </SliderTicks>
</SfSlider>
<SfSlider Value="40" Width="600px" Type="SliderType.MinRange">
    <SliderTooltip IsVisible="true"
                       ShowOn="TooltipShowOn.Always"
                       Placement="TooltipPlacement.After"></SliderTooltip>
</SfSlider>
<SfSlider Value="@RangeValue" Width="600px" Type="SliderType.Range">
    <SliderTooltip IsVisible="true"
                       ShowOn="TooltipShowOn.Always"
                       Placement="TooltipPlacement.After"></SliderTooltip>
</SfSlider>

@code{
    public int[] RangeValue = { 30, 70 };
}

